@using BookWebCatalog.Models;
@model BookCreateViewModel;

<div class="hero">
    <h1 class="display-4">Create a New Book</h1>
    <p class="lead">Please fill out the form to add a new book to the catalog.</p>
</div>


<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto rounded-lg border p-5 shadow-lg bg-white">
            <h2 class="text-center mb-5" style="color: #4b2e20;">Create New Book</h2>
            <form method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="Title" class="form-label">Book Title</label>
                    <input class="form-control" asp-for="Title" id="Title" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="AuthorID" class="form-label">Author</label>
                    <select class="form-select" asp-for="AuthorID" id="AuthorID">
                        <option value="">Select Author</option>
                        @foreach (var author in Model.Authors)
                        {
                            <option value="@author.Id">@author.FirstName @author.LastName</option>
                        }
                    </select>
                    <span asp-validation-for="AuthorID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="DateOfReleasing" class="form-label">Release Date</label>
                    <input type="date" class="form-control" asp-for="DateOfReleasing" id="DateOfReleasing" />
                    <span asp-validation-for="DateOfReleasing" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="Rating" class="form-label">Rating (0 - 5)</label>
                    <input type="number" class="form-control" asp-for="Rating" id="Rating" min="0" max="5" step="0.1" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label for="GenreID" class="form-label">Genre</label>
                    <select class="form-select" asp-for="GenreID" id="GenreID">
                        <option value="">Select Genre</option>
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-4">
                    <label for="PublisherID" class="form-label">Publisher</label>
                    <select class="form-select" asp-for="PublisherID" id="PublisherID">
                        <option value="">Select Publisher</option>
                        @foreach (var publisher in Model.Publishers)
                        {
                            <option value="@publisher.Id">@publisher.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PublisherID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <div class="d-grid col-md-5">
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </div>
                    <div class="d-grid col-md-5">
                        <a class="btn btn-outline-primary btn-lg" asp-controller="Book" asp-action="Index" role="button">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
