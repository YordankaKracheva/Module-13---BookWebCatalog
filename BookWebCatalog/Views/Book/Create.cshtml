            font-size: 3.5rem;
            font-weight: 600;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        .hero p {
            font-size: 1.25rem;
            font-weight: 300;
            margin-top: 10px;
        }
    .container {
        max-width: 80%;
    }

    .rounded-lg {
        border-radius: 10px;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-select, .form-control {
        border-radius: 8px;
        font-size: 1.1rem;
        padding: 12px 15px;
        border: 1px solid #ddd;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

