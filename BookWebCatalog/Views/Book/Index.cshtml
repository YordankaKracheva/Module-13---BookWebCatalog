@using BookWebCatalog.Data.Models;
@using static BookWebCatalog.Common.AdminUser;
@model List<Book>

<h2 class="text-center mb-5">List of @Model.Count Books</h2>

<div class="row mb-4">
    <div class="col d-flex justify-content-end">
        @if (User.IsInRole(AdminRoleName))
        {
            <a class="btn btn-primary" asp-controller="Book" asp-action="Create">Add New Book</a>
        }
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Release Date</th>
            <th>Rating</th>
            <th>Genre</th>
            <th>Author</th>
            @if (User.IsInRole(AdminRoleName))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.DateOfReleasing</td>
                <td>@book.Rating</td>
                <td>@book.Genre.Name</td>
                <td>@book.Author.FirstName @book.Author.LastName</td>
                @if (User.IsInRole(AdminRoleName))
                {
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<!-- CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #6f4f26, #d2b48c);
        margin: 0;
        padding: 0;
    }

    h2 {
        font-size: 2rem;
        color: #fff;
        font-weight: 700;
        margin-bottom: 30px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .btn-primary {
        background-color: #8b5e3c;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #5a3e2d;
    }

    .btn-outline-primary, .btn-outline-danger {
        border: 1px solid #8b5e3c;
        color: #8b5e3c;
        font-weight: 600;
        border-radius: 5px;
        padding: 5px 15px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-primary:hover, .btn-outline-danger:hover {
        background-color: #8b5e3c;
        color: white;
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
        border-radius: 8px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
        }

    .thead-dark {
        background-color: #6f4f26;
        color: white;
    }

    .table td {
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #e9e9e9;
    }

    media (max-width: 767px) {
        h2 {
            font-size: 1.5rem;
        }

        .table th, .table td {
            padding: 10px;
        }

        .btn-primary {
            font-size: 0.9rem;
            padding: 8px 18px;
        }

        .btn-outline-primary, .btn-outline-danger {
            font-size: 0.9rem;
            padding: 5px 12px;
        }
    }
</style>
