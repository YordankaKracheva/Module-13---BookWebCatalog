@using BookWebCatalog.Data.Models;
@using static BookWebCatalog.Common.AdminUser;
@model List<Author>
@{
}
<h2 class="text-center mb-5 heading">List of @Model.Count Authors</h2>
<div class="row mb-5 justify-content-between">
    <div class="col">
        @if (User.IsInRole(AdminRoleName))
        {
            <a class="btn btn-cta" asp-area="" asp-controller="Author" asp-action="Create">New Author</a>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Years</th>
                <th>Date of Birth</th>
                @if (User.IsInRole(AdminRoleName))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Id</td>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>@author.Years</td>
                    <td>@author.DateOfBirth</td>
                    @if (User.IsInRole(AdminRoleName))
                    {
                        <td class="actions">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Author" asp-action="Edit" asp-route-id="@author.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Author" asp-action="Delete" asp-route-id="@author.Id" onclick="return confirm('Are you sure you want to delete this author?')">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #6f4f26, #d2b48c);
        margin: 0;
        padding: 0;
    }

    h2.heading {
        font-size: 2rem;
        color: #fff; /* White color for contrast */
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Added shadow for better visibility */
    }

    .btn-cta {
        background-color: #432818; /* Teal color for the button */
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 12px 24px;
        transition: background-color 0.3s ease;
    }

    .btn-cta:hover {
            background-color: #582f0e /* Darker teal shade on hover */
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
        border-radius: 8px;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
    }

    .thead-dark {
        background-color: #6f4f26;
        color: white;
    }

    .table td {
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #e9e9e9;
    }

    .btn-primary {
        background-color: #8b5e3c;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #5a3e2d;
    }

    .btn-outline-primary, .btn-outline-danger {
        border: 1px solid #8b5e3c;
        color: #8b5e3c;
        font-weight: 600;
        border-radius: 5px;
        padding: 5px 15px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-primary:hover, .btn-outline-danger:hover {
        background-color: #8b5e3c;
        color: white;
    }

    .actions {
        white-space: nowrap;
    }

    media (max-width: 767px) {
        h2.heading {
            font-size: 1.5rem;
        }

        .table th, .table td {
            padding: 10px;
        }

        .btn-primary {
            font-size: 0.9rem;
            padding: 8px 18px;
        }

        .btn-outline-primary, .btn-outline-danger {
            font-size: 0.9rem;
            padding: 5px 12px;
        }
    }
</style>
