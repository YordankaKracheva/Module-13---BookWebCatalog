@using BookWebCatalog.Models;
@model BookPublisherViewModel;

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">New BookPublisher</h2>
		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Book</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="@Model.BookId">
						<option value="">Select Book</option>
						@foreach (var book in Model.Books)
						{
							<option value="@book.Id">@book.Title</option>
						}
					</select>
				</div>
			</div>
			<div class="row mb-3>">
				<label class="col-sm-4 col-form-label">Author</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="@Model.PublisherId">
						<option value="">Select Publisher</option>
						@foreach (var p in Model.Publishers)
						{
							<option value="@p.Id">@p.Name</option>
						}
					</select>
					<span asp-validation-for="@Model.PublisherId" class="text-danger"></span>
				</div>
			</div>
			<div class="row>">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="BookPublisher" asp-action="Index" role="button">
						Cancel
					</a>
				</div>
			</div>

		</form>
	</div>
</div>


