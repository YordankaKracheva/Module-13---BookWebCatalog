@{
	ViewData["Title"] = "Book Catalog Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
	<style>
		body {
			font-family: 'Poppins', sans-serif;
			background: linear-gradient(to right, #6f4f26, #d2b48c); 
			margin: 0;
			padding: 0;
		}

		.hero {
			color: white;
			padding: 150px 0;
			text-align: center;
			background-size: cover;
		}

			.hero h1 {
				font-size: 50px;
				font-weight: 600;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
				line-height: 1.2; 
				margin-bottom: 1px; 
			}

			.hero p {
				font-size: 18px;
				font-weight: 300;
				margin-top: 10px;
			}

		.card-columns {
			column-count: 3;
		}

		.card {
			border: none;
			margin-bottom: 30px;
			transition: transform 0.3s;
			background-color: #fff5e1;
			border-radius: 8px;
		}

			.card:hover {
				transform: scale(1.05);
				box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
			}

			.card img {
				max-height: 250px;
				object-fit: cover;
			}

		.card-body {
			padding: 20px;
			background-color: #fff; 
		}

		.card-title {
			font-size: 1.25rem;
			font-weight: bold;
			color: #6f4f26; 
		}

		.card-text {
			color: #6f4f26; 
			margin-bottom: 10px;
		}

		.btn-custom {
			background-color: #8b5e3c;
			color: white;
			border: none;
			padding: 8px 15px;
			text-transform: uppercase;
			font-weight: 600;
			border-radius: 5px;
			transition: background-color 0.3s;
		}

			.btn-custom:hover {
				background-color: #5a3e2d; 
			}

		.footer {
			background-color: #3e2c1c; 
			color: white;
			padding: 40px 0;
			text-align: center;
		}

			.footer a {
				color: #ffd700;
				text-decoration: none;
			}

			.footer p {
				font-size: 14px;
				color: #d3d3d3;
			}

		.wide-image-container {
			width: 100%; 
			max-width: 600px; 
			margin: 20px auto; 
			padding: 10px; 
			border: 5px solid #6f4f26; 
			box-sizing: border-box; 
			display: flex;
			justify-content: center;
			align-items: center;
		}

		*/
	</style>
</head>
<body>

	<div class="hero">
		<h1>Explore Our Book Collection</h1>
		<p>Discover new and exciting books from various genres and authors</p>
	</div>

	<div class="wide-image-container">
		<img src="~/images/book.jpg" alt="Book Collection" class="wide-image">
	</div>

	<div class="container mt-5">
		<h2 class="text-center mb-4" style="color: #6f4f26;">Featured Books</h2>
		<div class="card-columns">
			<div class="card">
				<img src="~/images/great.jpg" class="card-img-top" alt="Book Image">
				<div class="card-body">
					<h5 class="card-title">The Great Adventure</h5>
					<p class="card-text">By John Doe</p>
					<p class="card-text">Genre: Fiction</p>
					<a href="#" class="btn btn-custom">View Details</a>
				</div>
			</div>

			<div class="card">
				<img src="~/images/sea.jpg" class="card-img-top" alt="Book Image">
				<div class="card-body">
					<h5 class="card-title">Deep Sea Exploration</h5>
					<p class="card-text">By Jane Smith</p>
					<p class="card-text">Genre: Adventure</p>
					<a href="#" class="btn btn-custom">View Details</a>
				</div>
			</div>

			<div class="card">
				<img src="~/images/art.jpg" class="card-img-top" alt="Book Image">
				<div class="card-body">
					<h5 class="card-title">The Art of Coding</h5>
					<p class="card-text">By Alice Brown</p>
					<p class="card-text">Genre: Technology</p>
					<a href="#" class="btn btn-custom">View Details</a>
				</div>
			</div>

		</div>
	</div>

	<div class="footer">
		<p>© 2025 Book Catalog. All rights reserved.</p>
		<p><a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

