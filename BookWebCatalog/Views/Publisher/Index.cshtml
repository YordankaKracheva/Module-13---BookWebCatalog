@using BookWebCatalog.Data.Models;
@using static BookWebCatalog.Common.AdminUser;
@model List<Publisher>
@{

}
<h2 class="text-center mb-5 heading">List of @Model.Count Publishers</h2>

<div class="row mb-5 justify-content-between">
    <div class="col">
        @if (User.IsInRole(AdminRoleName))
        {
            <a class="btn btn-cta" asp-area="" asp-controller="Publisher" asp-action="Create">New Publisher</a>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                @if (User.IsInRole(AdminRoleName))
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model)
            {
                <tr>
                    <td>@publisher.Id</td>
                    <td>@publisher.Name</td>
                    @if (User.IsInRole(AdminRoleName))
                    {
                        <td class="actions" style="white-space:nowrap">
                            <a class="btn btn-sm btn-outline-primary" asp-controller="Publisher" asp-action="Edit" asp-route-id="@publisher.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-controller="Publisher" asp-action="Delete" asp-route-id="@publisher.Id" onclick="return confirm('Are you sure you want to delete this publisher?')">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #6f4f26, #d2b48c);
        margin: 0;
        padding: 0;
    }

    h2.heading {
        font-size: 1.75rem; 
        color: #fff;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .btn-cta {
        background-color: #432818;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-cta:hover {
            background-color: #582f0e;
        }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%; 
        max-width: 80%; 
        margin-left: auto;
        margin-right: auto;
        border-radius: 8px;
        table-layout: fixed; 
    }

        .table th, .table td {
            padding: 12px 16px; 
            text-align: left;
            font-size: 1rem; 
            word-wrap: break-word; 
        }

    .thead-dark {
        background-color: #6f4f26;
        color: white;
    }

    .table td {
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
        border: 1px solid #432818;
    }

    .table-hover tbody tr:hover {
        background-color: #e9e9e9;
    }

    .btn-primary {
        background-color: #8b5e3c;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 5px;
        padding: 8px 16px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #5a3e2d;
        }

    .btn-outline-primary, .btn-outline-danger {
        border: 1px solid #8b5e3c;
        color: #8b5e3c;
        font-weight: 600;
        border-radius: 5px;
        padding: 6px 12px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-primary:hover, .btn-outline-danger:hover {
            background-color: #8b5e3c;
            color: white;
        }

    .actions {
        white-space: nowrap;
    }

    media (max-width: 767px) {
        h2 .heading

    {
        font-size: 1.5rem; 
    }

    .table th, .table td {
        padding: 8px 10px; 
        font-size: 0.9rem; 
    }

    .btn-primary {
        font-size: 0.9rem;
        padding: 6px 12px;
    }

    .btn-outline-primary, .btn-outline-danger {
        font-size: 0.9rem;
        padding: 4px 10px;
    }

    }
</style>
